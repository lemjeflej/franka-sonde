<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="rail" params="parent">

    <link name="rail_link">
      <visual>
        <geometry>
          <box size="1.5 0.2 0.1"/>
        </geometry>
        <material name="Cyan">
            <color rgba="0 1.0 1.0 1.0"/>
        </material>
      </visual>
    </link>

    <link name="rail_carriage"/>

    <joint name="rail_joint" type="prismatic">
      <parent link="rail_link"/>
      <child link="rail_carriage"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="1.0" effort="1000" velocity="0.5"/>
    </joint>

    <joint name="rail_fixed" type="fixed">
      <parent link="${parent}"/>
      <child link="rail_link"/>
    </joint>

  </xacro:macro>

</robot>
